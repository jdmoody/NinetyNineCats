<%= render :partial => "layouts/errors" %>
<h1>Create a new rental request</h1>

<form action="<%= cat_rental_requests_url %>" method="post" accept-charset="utf-8">

  <p><label for="cat_choice">Choose a cat:</label>
    <select name="cat_rental_request[cat_id]" id="cat_choice">
      <option selected="Choose a Cat!"></option>
      <% @cats.each do |cat| %>
        <option value=<%= cat.id %>><%=cat.name%></option>
      <% end %>

    </select>
  </p>

  <p><label for="cat_rental_request[start_date]">Start Date:</label>
    <input type="date" name="cat_rental_request[start_date]" id="cat_rental_request[start_date]"
    value="<%= @cat_rental_request.start_date %>"></p>
  <p><label for="cat_rental_request[end_date]">End Date:</label>
    <input type="date" name="cat_rental_request[end_date]" id="cat_rental_request[end_date]"
    value="<%= @cat_rental_request.end_date %>"></p>
  <p><input type="submit"></p>
</form>
