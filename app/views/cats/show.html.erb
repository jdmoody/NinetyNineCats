<table>
    <tr>
        <td>Name: </td>
        <td><%= @cat.name%></td>
    </tr>
    <tr>
        <td>Birthday: </td>
        <td><%= @cat.birth_date%></td>
    </tr>
    <tr>
        <td>Color: </td>
        <td><%= @cat.color%></td>
    </tr>
    <tr>
        <td>Age: </td>
        <td><%= @cat.age%></td>
    </tr>
    <tr>
      <td>Sex: </td>
      <td><%= @cat.sex%></td>
    </tr>
</table>

<h2>Current requests for this cat</h2>
<table>
  <% @rental_requests.each do |request|%>
    <tr>
      <td>Start date: <%= request.start_date %></td>
      <td>End date: <%= request.end_date %></td>
      <% if request.pending? %>
        <td><%= button_to "Approve Request", cat_rental_request_approve_url(request) %></td>
        <td><%= button_to "Deny Request", cat_rental_request_deny_url(request) %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<p></p>
<%= link_to "<< Back to Cats list", cats_url %>
<%= link_to "Edit your kitty", edit_cat_url(@cat) %>