
<form action="<%= @cat.persisted? ? cat_url(@cat) : cats_url %>"
      method="post" accept-charset="utf-8">

  <input
    name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>">

  <% if @cat.persisted? %>
    <input type="hidden" name="_method" value="PATCH" />
  <% end %>

  <p>
    <label for="cat[name]">Name:</label>
    <input type="text" name="cat[name]" id="cat[name]" value="<%= @cat.name %>">
  </p>

  <p>
    <label for="cat[age]">Age:</label>
    <input type="text" name="cat[age]" id="cat[age]" value="<%= @cat.age %>">
  </p>

  <p>
    <input type="radio" name="cat[sex]" id="cat_sex_female" value="F"
           <%= "checked" if @cat.sex == "F" %>>
    <label for="cat_sex_female">Female</label>

    <input type="radio" name="cat[sex]" id="cat_sex_male" value="M"
           <%= "checked" if @cat.sex == "M" %>>
    <label for="cat_sex_male">Male</label>
  </p>

  <p><label for="cat_coat_color">Coat Color:</label>
    <select name="cat[color]" id="cat_coat_color">
      <option selected="<%= @cat.color %>"><%= @cat.color %></option>
      <option value="black">Black</option>
      <option value="orange">Orange</option>
      <option value="tortoise shell">Tortoise Shell</option>
      <option value="calico">Calico</option>
      <option value="white">White</option>
    </select>
  </p>

  <p>
    <label for="cat[birth_date]">Birthday:</label>
    <input type="date" name="cat[birth_date]" id="cat[birth_date]"
           value="<%= @cat.birth_date %>">
  </p>

  <p><input type="submit"></p>
</form>